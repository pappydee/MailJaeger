# Raspberry Pi 5 Optimized Configuration
# This configuration is optimized for Raspberry Pi 5 with 16GB RAM

# IMAP Configuration
IMAP_HOST=your_imap_host
IMAP_PORT=993
IMAP_USERNAME=your_email@example.com
IMAP_PASSWORD=your_password

# Folder Configuration
INBOX_FOLDER=INBOX
ARCHIVE_FOLDER=Archive
SPAM_FOLDER=Spam

# AI Configuration - Using lightweight model
AI_ENDPOINT=http://localhost:11434
AI_MODEL=phi3:mini  # Most efficient for Raspberry Pi
AI_TIMEOUT=90

# Database - Store on SSD if possible
DATABASE_URL=sqlite:///./mailjaeger.db

# Processing Configuration - Reduced for efficiency
SPAM_THRESHOLD=0.7
MAX_EMAILS_PER_RUN=50  # Reduced batch size

# Scheduling
SCHEDULE_TIME=08:00
SCHEDULE_TIMEZONE=Europe/Berlin

# Learning System
LEARNING_ENABLED=true
LEARNING_CONFIDENCE_THRESHOLD=0.8

# Storage - Optimized to save space and memory
STORE_EMAIL_BODY=false  # Don't store full body to save space
STORE_ATTACHMENTS=false
ATTACHMENT_DIR=./attachments

# Search - Store on SSD if possible
SEARCH_INDEX_DIR=./search_index

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/mailjaeger.log
DEBUG=false

# Performance Notes for Raspberry Pi 5:
# 1. Use SSD instead of SD card for better I/O
# 2. Ensure adequate cooling (heatsink + fan recommended)
# 3. Monitor temperature: vcgencmd measure_temp
# 4. Consider adding swap if processing large batches
# 5. Use phi3:mini (2-3GB) or llama3.2:3b (2-3GB) models
