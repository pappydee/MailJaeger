# Example Configuration for Outlook/Office 365

# IMAP Configuration
IMAP_HOST=outlook.office365.com
IMAP_PORT=993
IMAP_USERNAME=your_email@outlook.com
IMAP_PASSWORD=your_password_here

# For Outlook:
# 1. Ensure IMAP is enabled in Outlook settings
# 2. If using 2FA, create an App Password:
#    Go to Security → Security info → Add sign-in method → App password
# 3. Use your regular password or app password

# Outlook Folder Names
INBOX_FOLDER=INBOX
ARCHIVE_FOLDER=Archive
SPAM_FOLDER=Junk

# AI Configuration
AI_ENDPOINT=http://localhost:11434
AI_MODEL=mistral:7b-instruct-q4_0
AI_TIMEOUT=120

# Database
DATABASE_URL=sqlite:///./mailjaeger.db

# Processing Configuration
SPAM_THRESHOLD=0.7
MAX_EMAILS_PER_RUN=200

# Scheduling (Germany timezone)
SCHEDULE_TIME=08:00
SCHEDULE_TIMEZONE=Europe/Berlin

# Learning System
LEARNING_ENABLED=true
LEARNING_CONFIDENCE_THRESHOLD=0.8

# Storage
STORE_EMAIL_BODY=true
STORE_ATTACHMENTS=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/mailjaeger.log
DEBUG=false
